<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:padding="20dp"
    android:id="@+id/onboardingFragment1">

    <!-- Tombol Skip (Pojok Kanan Atas) -->
    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Konten Utama (Tengah Layar) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Teks "Hi, Welcome to SmartFeeder!" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Welcome to"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:lineSpacingExtra="8sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SmartFeeder !"
            android:textSize="28sp"
            android:textColor="@color/green"
            android:textAlignment="center"
            android:textStyle="bold"
            android:lineSpacingExtra="8sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="15dp"/>

        <!-- Gambar Ilustrasi -->
        <ImageView
            android:layout_width="275dp"
            android:layout_height="278dp"
            android:src="@drawable/onboarding1"
            android:contentDescription="Pet Feeder Illustration"
            android:layout_marginBottom="24dp"/>

        <!-- Teks Deskripsi -->
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Easily schedule meals for your pets, anytime, anywhere!"
            android:textSize="16sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:lineSpacingExtra="4sp"
            android:fontFamily="sans-serif"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGetStarted"
            android:layout_width="275dp"
            android:layout_height="56dp"
            android:text="Get Started"
            android:background="@drawable/button_gradient"
            android:layout_marginTop="60dp"
            app:backgroundTint="@null"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>