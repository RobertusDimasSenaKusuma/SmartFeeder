<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Tombol Menu 1: Feed Control -->
        <LinearLayout
            android:id="@+id/menuFeedControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_dynamic_selector"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iconFeedControl"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_food"
                app:tint="@color/button_dynamic_icon_tint_selector"
                android:layout_marginEnd="16dp"
                android:contentDescription="Feed Control Icon"/>

            <TextView
                android:id="@+id/textFeedControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed Control"
                android:textColor="@color/button_dynamic_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Tombol Menu 2: Feed Stock -->
        <LinearLayout
            android:id="@+id/menuFeedStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_dynamic_selector"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iconFeedStock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_box"
                app:tint="@color/button_dynamic_icon_tint_selector"
                android:layout_marginEnd="16dp"
                android:contentDescription="Feed Stock Icon"/>

            <TextView
                android:id="@+id/textFeedStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed Stock"
                android:textColor="@color/button_dynamic_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Tombol Menu 3: Schedule -->
        <LinearLayout
            android:id="@+id/menuSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_dynamic_selector"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/iconSchedule"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_schedule"
                app:tint="@color/button_dynamic_icon_tint_selector"
                android:layout_marginEnd="16dp"
                android:contentDescription="Schedule Icon"/>

            <TextView
                android:id="@+id/textSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textColor="@color/button_dynamic_text_color_selector"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>